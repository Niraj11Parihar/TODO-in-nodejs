<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Task Manager</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .completed {
      text-decoration: line-through;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <div class="row">
      <div class="col-12 justify-content-center d-flex">
        <form action="/insertData" method="post" class="mb-4">
          <h2 class="mb-3 ">Add Task</h2>
          <div class="row g-3 align-items-center">
            <div class="col-md-4">
              <input type="text" name="empnm" class="form-control" placeholder="Employee Name">
            </div>
            <div class="col-md-4">
              <input type="text" name="task" class="form-control" placeholder="Task">
            </div>
            <div class="col-md-4">
              <button type="submit" class="btn btn-primary">Add Task</button>
            </div>
          </div>
        </form>
      </div>
      <div class="col-12 justify-content-center d-flex align-items-center my-5">
        <h2 class="d-none">Task List</h2>
        <table class="table w-50" border align="center" >
          <thead>
            <tr>
              <th scope="col">Employee Name</th>
              <th scope="col">Task</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% userData.forEach((user, id) => { %>
              <tr>
                <td class="<%= user.completed ? 'completed' : '' %>"><%= user.empnm %></td>
                <td class="<%= user.completed ? 'completed' : '' %>"><%= user.task %></td>
                <td>
                  <a href="/deleteData/<%= id %>" class="btn btn-danger">Delete</a>
                  <a href="/editData/<%= id %>" class="btn btn-success">Edit</a>
                  <!-- <% if (!user.completed) { %>
                    <a href="/complete/<%= id %>" class="btn btn-success">Complete</a>
                  <% } %> -->
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>
</html>
